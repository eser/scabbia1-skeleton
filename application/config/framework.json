{
    "includeList": [
        "{app}controllers/*.php"
    ],

    "classLoaderList": [
        "{app}includes",
        "{app}tests",
        "{app}models"
    ],
    
    "eventList": [
        {
            "name":         "pre-run",
            "type":         "callback",
            "value":        "App\\Translations::javascriptTranslations"
        }
    ],

    "options": {
        "gzip":                 true,
        "siteroot:disabled":    "/scabbiaapp"
    },

    "extensionList": [
        "admin"
    ],

    "i18n": {
        "languages": [
            {
                "id":               "en",
                "locale":           "en_US.UTF-8",
                "localewin":        "English_United States.1252",
                "internalEncoding": "UTF-8",
                "name":             "English"
            },
            {
                "id":               "tr",
                "locale":           "tr_TR.UTF-8",
                "localewin":        "Turkish_Turkey.1254",
                "internalEncoding": "UTF-8",
                "name":             "Turkish"
            }
        ]
    },

    "smtp": {
        "host":         "ssl://mail.messagingengine.com",
        "port":         465,
        "username":     "noreply@scabbiaapp.com",
        "password":     "************"
    }
}
